<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:layout_height="match_parent">


        //prodname,store name,cus name,selling price,customer prise(edittxt),qty,discount type(spinner),status(spinner approve oe reject),btn update
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            android:text="TextView"/>


        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:text="TextView" />
        <TextView
            android:id="@+id/tvCusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:text="TextView" />
        <TextView
            android:id="@+id/tvSellingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:text="TextView" />
        <TextView
            android:id="@+id/tvQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:text="Customer Price : " />
        <EditText
            android:id="@+id/etCusPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:text="TextView" />
        </LinearLayout>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerDis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"/>


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_round_corner_red"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Update"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>